<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    <group>
                        <field name="name"/>
                        <field name="ref"/>
                        <field name="gender"/>
                        <field name="active" invisible="1"/>

                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" option="{'post_refresh':'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="name"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hospital.doctor.search</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <field name="ref"/>
                <field name="name"/>
                <field name="gender"/>
                <separator/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first doctor!
            </p>
        </field>
    </record>

    <menuitem id="menu_doctor"
              name="doctors"
              parent="menu_hospital_master_data"
              action="action_hospital_doctor"
              sequence="10"/>

</odoo>