<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="action_property_view_offer" model="ir.actions.act_window">
            <field name="name">Property</field>
            <field name="res_model">estat.property.offer</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('property_id' ,'=', active_id)]</field>
        </record>

        <record id="estat_property_tree_view" model="ir.ui.view">
            <field name="name">estat.property.tree</field>
            <field name="model">estat.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type_id"/>
                    <field name="postcode"/>
                    <field name="date_availability"/>
                    <field name="expected_price"/>
                    <field name="best_offer"/>
                    <field name="selling_price"/>
                    <field name="state" widget="badge" options="{'color_field':'color'}"/>
                </tree>
            </field>
        </record>

        <record id="estat_property_pivot_view" model="ir.ui.view">
            <field name="name">estat.property.pivot</field>
            <field name="model">estat.property</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="name" type="row"/>
                    <field name="selling_price" type="measure"/>
                    <field name="expected_price" type="column"/>
                    <field name="facades" type="measure"/>
                    <field name="bedrooms" type="measure"/>
                    <field name="state" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="estat_property_graph_view" model="ir.ui.view">
            <field name="name">estat.property.graph</field>
            <field name="model">estat.property</field>
            <field name="arch" type="xml">
                <graph>
                    <field name="name"/>
                    <field name="selling_price" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="estat_property_search_view" model="ir.ui.view">
            <field name="name">estat.property.search</field>
            <field name="model">estat.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="state"/>
                    <field name="postcode"/>
                    <field name="buyer_id"/>
                    <filter string="new" name="new_status" domain="[('state','=','new')]"/>
                    <filter string="Sold" name="sold_status" domain="[('state','=','sold')]"/>
                    <filter string="Received" name="received_status" domain="[('state','=','received')]"/>
                    <filter string="Accepted" name="accepted_status" domain="[('state','=','accepted')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_by_status" context="{'group_by':'state'}"/>
                    </group>
                    <searchpanel>
                        <field name="state" icon="fa_filter" groupby="group_by_status" limit="0"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <record id="estat_property_kanban_view" model="ir.ui.view">
            <field name="name">estat.property.kanban</field>
            <field name="model">estat.property</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" on_create="quick_create"
                        quick_create_view="real_estat_ads.quick_estat_property_form_view">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="postcode"/>
                    <field name="buyer_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_tags_selection">
                                        <field name="tag_ids" widget="many2many_tags"
                                               options="{'color_field' : 'color'}"/>
                                    </div>

                                    <div class="o_kanban_record_botton">
                                        <div class="o_kanban_botton_left">
                                            <field name="offer_count"/>
                                            offers(s)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="quick_estat_property_form_view" model="ir.ui.view">
            <field name="name">estat.property.form</field>
            <field name="model">estat.property</field>
            <field name="priority">1000</field>
            <field name="arch" type="xml">
                <form>
                    <field name="name"/>
                </form>
            </field>
        </record>

        <record id="property_calendar_view" model="ir.ui.view">
            <field name="name">estat.property.calendar</field>
            <field name="model">estat.property</field>
            <field name="arch" type="xml">
                <calendar date_start="date_availability" string="Properties" mode="month" event_open_popup="true"
                          quick_add="false">
                    <field name="name"/>
                    <field name="date_availability"/>
                    <field name="postcode"/>
                </calendar>
            </field>
        </record>


        <record id="estat_property_form_view" model="ir.ui.view">
            <field name="name">estat.property.form</field>
            <field name="model">estat.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_sold" type="object" string="Sold" class="btn btn-primary"/>
                        <button name="action_cancel" type="object" string="Cancel" class="btn btn-danger"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="%(real_estat_ads.action_property_view_offer)d"
                                    type="action" icon="fa-handshake-o">
                                <field name="offer_count" string="Offers" widget="statinfo"/>
                            </button>

                            <button class="oe_stat_button" name="action_url_action"
                                    type="object" icon="fa-handshake-o">
                                <field name="offer_count" string="Offers" widget="statinfo"/>
                            </button>

                           <!-- ir.action.client
                             <button class="oe_stat_button" name="action_testing_client"
                                    type="object" icon="fa-handshake-o">
                                <field name="offer_count" string="Testing Client" widget="statinfo"/>
                            </button>
                             -->

                        </div>
                        <group>
                            <field name="name" widget="char_emojis" placeholder="zizou"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                            <group>
                                <field name="type_id"/>
                                <field name="postcode" password="True"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price" groups="real_estat_ads.group_property_manager"/>
                                <field name="best_offer"/>
                                <field name="selling_price"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage" widget="boolean_toggle"/>
                                    <field name="garden" widget="boolean_toggle"/>
                                    <field name="garden_area" attrs="{'invisible':[('garden', '=' ,False)]}"/>
                                    <field name="garden_orientation" attrs="{'invisible':[('garden', '=' ,False)]}"
                                           widget="radio"/>
                                    <field name="total_area"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids">
                                    <tree editable="Bottom" decoration-success="status == 'accepted'"
                                          decoration-danger="status == 'refused'">
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="create_date"/>
                                        <field name="validity"/>
                                        <field name="deadline" widget="remaining_days"/>
                                        <field name="status" readonly="1"/>
                                        <button name="action_accept_offer" type="object" icon="fa-check"
                                                string="Accept"/>
                                        <button name="action_cancel_offer" type="object" icon="fa-times"
                                                string="Decline"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="sales_id" widget="many2one_avatar_user"/>
                                    <field name="buyer_id"/>
                                    <field name="phone" widget="phone"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_property" model="ir.actions.act_window">
            <field name="name">Property</field>
            <field name="res_model">estat.property</field>
            <field name="view_mode">kanban,graph,calendar,pivot,tree,form</field>
            <field name="view_id" ref="estat_property_kanban_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Property to Advertise
                </p>
            </field>
        </record>

        <record id="action_custom_client_action" model="ir.actions.client">
            <field name="name">Custom Client Action</field>
            <field name="tag">custom_client_action</field>
        </record>

    </data>
</odoo>
