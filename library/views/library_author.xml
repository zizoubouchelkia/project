<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Author Form View -->
        <record id="view_library_author_form" model="ir.ui.view">
            <field name="name">library.author.form</field>
            <field name="model">library.author</field>
            <field name="arch" type="xml">
                <form string="Author">
                    <sheet>
                        <!-- Author's Cover Image -->
                        <div>
                            <field name="cover_image_author" widget="image" class="oe_avatar"
                                   options="{'preview_image': 'cover_image_author'}"/>
                        </div>
                        <group>
                            <group>
                                <!-- Basic Details -->
                                <field name="name"/>
                                <field name="date_of_birth"/>
                                <field name="age_label" readonly="1"/>
                                <field name="website"/>
                            </group>
                            <group>
                                <!-- Biography and Awards -->
                                <field name="biography"/>
                                <field name="awards"/>
                            </group>
                        </group>
                        <notebook>
                            <!-- Books by Author -->
                            <page string="Books">
                                <field name="book_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="isbn"/>
                                        <field name="copy_count"/>
                                    </tree>
                                </field>
                            </page>
                            <!-- Additional Information -->
                            <page string="Additional Info">
                                <group>
                                    <field name="email"/>
                                    <field name="phone"/>
                                    <field name="address"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Author Tree View -->
        <record id="view_library_author_tree" model="ir.ui.view">
            <field name="name">library.author.tree</field>
            <field name="model">library.author</field>
            <field name="arch" type="xml">
                <tree string="Author">
                    <field name="name"/>
                    <field name="date_of_birth"/>
                </tree>
            </field>
        </record>

        <!-- Author Action -->
        <record id="library.action_library_authors" model="ir.actions.act_window">
            <field name="name">Author</field>
            <field name="res_model">library.author</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
