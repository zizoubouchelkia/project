<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_library_publisher_form" model="ir.ui.view">
        <field name="name">library.publisher.form</field>
        <field name="model">library.publisher</field>
        <field name="arch" type="xml">
            <form string="Library Publisher">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="address"/>
                        <field name="contact"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_library_publisher_tree" model="ir.ui.view">
        <field name="name">library.publisher.tree</field>
        <field name="model">library.publisher</field>
        <field name="arch" type="xml">
            <tree string="Library Publishers">
                <field name="name"/>
                <field name="address"/>
                <field name="contact"/>
            </tree>
        </field>
    </record>

    <record id="action_library_publisher" model="ir.actions.act_window">
        <field name="name">Publishers</field>
        <field name="res_model">library.publisher</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_library_publisher_tree"/>
    </record>

    <record id="menu_library_publisher" model="ir.ui.menu">
        <field name="name">Publishers</field>
        <field name="parent_id" ref="menu_library_book"/>
        <field name="sequence" eval="20"/>
        <field name="action" ref="action_library_publisher"/>
    </record>

</odoo>